      <!-- vtm settings.xml (fixed for directvt/vtm) -->
<!-- Reference docs: repo Settings page and sample configuration. -->

<!-- Clear previously defined sources and include system/user defaults first -->
<include*/>
<include="/etc/vtm/settings.xml"/>
<include="~/.config/vtm/settings.xml"/>
 
     If your vtm build already loads a built-in default, you can omit includes. -->
<include*/>

<config>
  <desktop>
    <taskbar wide=false selected="Term">
      <!-- Clear any previously defined taskbar items -->
      <item*/>

      <!-- Terminal group -->
      <item splitter label="Terminal"/>
      <item id="Term" label="Terminal Emulator" type="dtvt" title="Terminal" cmd="$0 -r term">
        <tooltip>
          " \e[1mTerminal Console\e[m               \n"
          "   LeftClick to launch instance \n"
          "   RightClick to set as default "
        </tooltip>
        <config>
          <terminal>
            <scrollback>
              <size=100000/>
              <wrap=true/>
            </scrollback>
          </terminal>
        </config>
      </item>
      <item id="term" label="Shell" type="term" title="bash" cmd="bash" tooltip="Default shell"/>

      <!-- Packages -->
      <item splitter label="Packages"/>
      <item id="aptitude" label="Aptitude" type="term" title="aptitude" cmd="aptitude" tooltip="Debian ncurses package manager"/>

      <!-- System / Stats -->
      <item splitter label="System"/>
      <item id="glances" label="Glances" type="term" title="glances" cmd="glances" tooltip="System monitor (curses)"/>
      <item id="htop"    label="System Monitor" type="term" title="htop" cmd="htop" tooltip="CPU & memory monitor"/>
      <item id="neofetch" label="Device Stats" type="term" title="neofetch" cmd="neofetch" tooltip="Quick system summary"/>

      <!-- Network -->
      <item splitter label="Network"/>
      <item id="nmtui" label="Network Manager" type="term" title="nmtui" cmd="nmtui" tooltip="Network configuration (TUI)"/>
      <item id="termshark" label="Wireshark" type="term" title="termshark" cmd="termshark" tooltip="Packet analyzer (TUI)"/>
      <item id="wavemon" label="Wireless Monitor" type="term" title="wavemon" cmd="wavemon" tooltip="Wireless signal monitor"/>

      <!-- DevOps -->
      <item splitter label="DevOps"/>
      <item id="lazydocker" label="LazyDocker" type="term" title="lazydocker" cmd="lazydocker" tooltip="TUI for Docker & compose"/>
      <item id="lazygit"    label="LazyGit"    type="term" title="lazygit"    cmd="lazygit"    tooltip="TUI for Git workflows"/>

      <!-- File/Editors -->
      <item splitter label="Editors & Files"/>
      <item id="mc"      label="File Manager" type="term" title="Midnight Commander" cmd="mc" tooltip="Two-pane file manager"/>
      <item id="nano"    label="Editor"       type="term" title="nano" cmd="nano" tooltip="Terminal text editor"/>
      <item id="mcedit"  label="Editor2"      type="term" title="mcedit" cmd="mcedit" tooltip="MC editor"/>
      <item id="mcdiff"  label="Diff Viewer"  type="term" title="mcedit" cmd="mcedit" tooltip="Use mcedit as diff viewer"/>

      <!-- Office-ish -->
      <item splitter label="Office"/>
      <item id="calcurse" label="Calendar"    type="term" title="calcurse" cmd="calcurse" tooltip="Calendar & agenda"/>
      <item id="mutt"     label="Email"       type="term" title="mutt"     cmd="mutt"     tooltip="Email client"/>
      <item id="sc-im"    label="Spreadsheet" type="term" title="sc-im"    cmd="sc-im"    tooltip="Spreadsheet app"/>

      <!-- Web / Misc -->
      <item splitter label="Web & Misc"/>
      <item id="lynx"  label="Browser" type="term" title="lynx" cmd="lynx" tooltip="Text web browser"/>
      <item id="Logs"  label="Logs"    type="dtvt" title="Logs" cmd="$0 -q -r term $0 -m" tooltip="Log monitor">
        <config>
          <terminal>
            <scrollback>
              <size=50000/>
              <wrap=false/>
            </scrollback>
          </terminal>
        </config>
      </item>

      <!-- Games -->
      <item splitter label="Games"/>
      <item id="netris" label="Tetris" type="term" title="netris" cmd="netris" tooltip="Tetris game"/>
      <item id="nsnake" label="Snake"  type="term" title="nsnake" cmd="nsnake" tooltip="Snake game"/>

      <!-- Tiling WM demo -->
      <item splitter label="Other"/>
      <item id="Tile" label="Tile" type="tile" title="Tiling Window Manager" cmd="h1:1(Term, Term)" tooltip="Two terminals in a tiled layout"/>
    </taskbar>
  </desktop>
</config>
